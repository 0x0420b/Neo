<UserControl x:Class="WoWEditor6.UI.Dialogs.BrushSettingsWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoWEditor6.UI.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Padding="10,10,10,10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <CheckBox Click="DrawBrushModels_Click">Draw Brush on Models</CheckBox>
                <CheckBox IsChecked="True" Click="HighlightModel_Click" Margin="0,5,0,0">Highlight Models in Brush</CheckBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
