<Window x:Class="WoWEditor6.UI.Components.WdlLoadingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoWEditor6.UI.Components"
             mc:Ignorable="d"
             Title="Generating WDL" Width="400" Height="130" Topmost="True" WindowStyle="ToolWindow" Closing="OnClosing">
    <Grid>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20,0,20,0">
                <Label x:Name="ActionIndicator">Processing...</Label>
                <Border Height="10"></Border>
                <ProgressBar Height="15" x:Name="ProgressIndicator"></ProgressBar>
                <Border Height="25"></Border>
            </StackPanel>
    </Grid>
</Window>
