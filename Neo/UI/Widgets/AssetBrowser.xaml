                            <CheckBox IsChecked="True" Margin="10,0,0,0" Click="HideUnknownFiles_Click">Hide Unknown Files</CheckBox>
                            <CheckBox IsChecked="True" Margin="10,0,0,0" Click="ShowTextures_Click">Textures</CheckBox>
